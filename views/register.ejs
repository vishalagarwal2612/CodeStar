<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign up - CodeStar</title>
  <link rel="stylesheet" href="login_style.css">
</head>
<body>
  <!-- Navbar -->
<header class="navbar">
  <div class="logo">⚡ CodeStar</div>

  <% if (user) { %>
    <!-- Logged in: show nav links + logout -->
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/problems">Problems</a>
      <a href="/profile">Profile</a>
      <a href="/leaderboard">Leaderboard</a>
    </nav>
    <div class="auth-buttons">
      <a href="/logout" class="btn-primary">Logout</a>
    </div>
  <% } else { %>
    <!-- Not logged in: show only login/signup -->
    <div class="auth-buttons">
      <a href="/login" class="btn-outline">Login</a>
      <a href="/signup" class="btn-primary">Sign Up</a>
    </div>
  <% } %>
</header>


  <!-- Login Section -->
  <section class="login-section">
    <div class="login-card">
      <h1>Register to CodeStar</h1>
      <p>Enter your details to create your account.</p>

      <!-- Flash Messages -->
      <% if (error && error.length > 0) { %>
        <div class="flash flash-error">
          <% error.forEach(err => { %>
            <p><%= err %></p>
          <% }) %>
        </div>
      <% } %>

      <% if (success && success.length > 0) { %>
        <div class="flash flash-success">
          <% success.forEach(msg => { %>
            <p><%= msg %></p>
          <% }) %>
        </div>
      <% } %>

      <form action="/signup" method="POST">
        <!-- Username -->
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter username" required autocomplete="off">
        </div>

        <!-- Email -->
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter email" required autocomplete="off">
        </div>

        <!-- Password -->
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter password" required autocomplete="off">
        </div>

        <!-- Submit Button -->
        <div class="form-actions">
          <button type="submit" class="btn-primary">Register</button>
        </div>

        <!-- Signup Link -->
        <p class="signup-text">Already have an account? <a href="/login">Login</a></p>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <p>© <%= new Date().getFullYear() %> CodeStar. Built for coders, by coders.</p>
  </footer>
</body>
</html>
