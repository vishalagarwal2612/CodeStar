<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Binary Search | CodeStar</title>
  <link rel="stylesheet" href="/binary_search_style.css">
</head>
<body>
  <!-- Navbar -->
<header class="navbar">
  <div class="logo">⚡ CodeStar</div>

  <% if (user) { %>
    <!-- Logged in: show nav links + logout -->
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/problems">Problems</a>
      <a href="/profile">Profile</a>
      <a href="/leaderboard">Leaderboard</a>
    </nav>
    <div class="auth-buttons">
      <a href="/logout" class="btn-primary">Logout</a>
    </div>
  <% } else { %>
    <!-- Not logged in: show only login/signup -->
    <div class="auth-buttons">
      <a href="/login" class="btn-outline">Login</a>
      <a href="/signup" class="btn-primary">Sign Up</a>
    </div>
  <% } %>
</header>


  <!-- Hero -->
  <section class="topic-hero">
    <h1>Binary Search</h1>
    <p>Learn binary search step by step and solve classic search problems efficiently.</p>
  </section>

  <!-- Key Display -->
  <section class="bs-key">
    <p>Key to search: <span id="key">10</span></p>
  </section>

  <!-- Array Visualization -->
  <main class="problem-container">
    <!-- Top array: numbers 1-25 -->
    <div class="array-container" id="array-container">
  <% for(let i = 1; i <= 25; i++) { %>
    <div class="array-cell" id="cell-<%= i %>"><%= i %></div>
  <% } %>
  <div class="search-space" id="search-space"></div>
</div>

    <!-- Bottom array: problem cells -->
    <div class="problem-grid">
      <% problems.forEach((p, i) => { %>
        <div class="problem-cell <%= p.locked ? 'locked' : '' %>" data-index="<%= i %>">
          <div class="problem-info">
            <a href="<%= p.link %>" target="_blank"><%= p.title %></a>
          </div>
          <input type="checkbox" class="problem-check" data-index="<%= i %>" <%= p.solved ? 'checked' : '' %> />
        </div>
      <% }) %>
    </div>
  </main>

  <!-- Confirm Modal -->
  <div id="confirm-modal" class="modal hidden">
    <div class="modal-content">
      <p id="modal-message">Mark this problem as solved?</p>
      <div class="modal-buttons">
        <button id="confirm-yes">Yes</button>
        <button id="confirm-no">No</button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <p>© <%= new Date().getFullYear() %> CodeStar. Built for coders, by coders.</p>
  </footer>
  <script src="/binary_search_script.js"></script>
</body>
</html>
