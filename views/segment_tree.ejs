<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Segment Tree | CodeStar</title>
  <link rel="stylesheet" href="/binary_tree_style.css" />
</head>
<body>
  <!-- Navbar -->
<header class="navbar">
  <div class="logo">⚡ CodeStar</div>

  <% if (user) { %>
    <!-- Logged in: show nav links + logout -->
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/problems">Problems</a>
      <a href="/profile">Profile</a>
      <a href="/leaderboard">Leaderboard</a>
    </nav>
    <div class="auth-buttons">
      <a href="/logout" class="btn-primary">Logout</a>
    </div>
  <% } else { %>
    <!-- Not logged in: show only login/signup -->
    <div class="auth-buttons">
      <a href="/login" class="btn-outline">Login</a>
      <a href="/signup" class="btn-primary">Sign Up</a>
    </div>
  <% } %>
</header>


  <!-- Hero -->
  <section class="topic-hero">
    <h1>Segment Tree</h1>
    <p>Master range queries and updates. 3 levels · 7 problems.</p>
  </section>

  <!-- Segment Tree -->
  <main class="tree-container" id="treeContainer">
    <!-- SVG edges -->
    <svg id="tree-edges" class="tree-edges" xmlns="http://www.w3.org/2000/svg"></svg>

    <!-- Root -->
    <div class="tree-level level-1">
      <div class="tree-node" data-index="0">
        <div class="problem-info">
          <a href="<%= problems[0].link %>" target="_blank"><%= problems[0].title %></a>
        </div>
        <input type="checkbox" class="problem-check" data-index="0" <%= problems[0].solved ? 'checked' : '' %> />
      </div>
    </div>

    <!-- Split into 2 halves -->
    <div class="tree-level level-2">
      <% for (let i = 1; i <= 2; i++) { %>
        <div class="tree-node locked" data-index="<%= i %>">
          <div class="problem-info">
            <a href="<%= problems[i].link %>" target="_blank"><%= problems[i].title %></a>
          </div>
          <input type="checkbox" class="problem-check" data-index="<%= i %>" <%= problems[i].solved ? 'checked' : '' %> />
        </div>
      <% } %>
    </div>

    <!-- Split into 4 quarters -->
    <div class="tree-level level-3">
      <% for (let i = 3; i <= 6; i++) { %>
        <div class="tree-node locked" data-index="<%= i %>">
          <div class="problem-info">
            <a href="<%= problems[i].link %>" target="_blank"><%= problems[i].title %></a>
          </div>
          <input type="checkbox" class="problem-check" data-index="<%= i %>" <%= problems[i].solved ? 'checked' : '' %> />
        </div>
      <% } %>
    </div>

  <!-- Confirm Modal -->
  <div id="confirm-modal" class="modal hidden">
    <div class="modal-content">
      <p>Mark this problem as solved?</p>
      <div class="modal-buttons">
        <button id="confirm-yes">Yes</button>
        <button id="confirm-no">No</button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <p>© <%= new Date().getFullYear() %> CodeStar. Built for coders, by coders.</p>
  </footer>

  <script src="/segment_tree_script.js"></script>
</body>
</html>
